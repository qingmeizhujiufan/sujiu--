/* pages/comfirmorder/comfirmorder.wxss */
.error {  
  position: fixed; 
  left: 0; 
  top: 0; 
  width: 100%; 
  height: 58rpx; 
  line-height: 58rpx; 
  font-size: 24rpx; 
  text-align: center;
  background: #de352d; 
  color: #fff;  
  z-index:3;
}  

.decrease,
.add {
  display:inline-block;
  width: 50rpx;
  height: 50rpx;
  color: #acacac; 
  background-color: #ddd; 
  text-align: center;
  font-size: 36rpx;
  box-sizing: border-box;
}

.num {
  display:inline-block;
  width: 50rpx; 
  height: 50rpx;
  padding:8rpx 0;  
  text-align:center;
  font-size: 24rpx;
  box-sizing: border-box;
}

.btn {
  background-color: #e64340;
}